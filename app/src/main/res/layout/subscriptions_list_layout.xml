<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/subscriptionCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorPrimaryButton"
        app:cardElevation="4dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/ivColorOfSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/buttonstyle" />

            <ImageView
                android:id="@+id/ivSubscriptionIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/adobecc" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNameOfSubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="80dp"
                android:layout_toRightOf="@id/ivSubscriptionIcon"
                android:fontFamily="@font/roboto"
                android:text="Name Of Sub"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvPriceOfSubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc"
                android:layout_gravity="center|end"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/ivSubscriptionIcon"
                android:text="Price"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvCycleOfSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPriceOfSubscription"
                android:layout_gravity="center|end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_toRightOf="@id/ivSubscriptionIcon"
                android:fontFamily="@font/roboto_medium"
                android:text="Cycle"
                android:textColor="@color/colorAccent" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>